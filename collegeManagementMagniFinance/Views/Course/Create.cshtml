@model collegeManagementMagniFinance.Models.CourseModel

@{
    ViewBag.Title = "Create";
}

<h2>Register Course</h2>


<div ng-app="Courseapp" ng-controller="CourseController">

    <div class="container">

        <div class="row">

            <div class="col-sm-2"></div>

            <div class="col-sm-8">

                <div class="form-group">

                    <label>Name</label>

                    <input type="text" ng-model="courseModel.Name" class="form-control" />

                </div>

                <div class="form-group">

                    <input type="button" class="btn btn-primary" ng-click="savedata()" value="{{btntext}}" />

                </div>

                <div class="form-group">

                    <span>The course will get a subject when you register a subject</span>

                </div>


            </div>

            <div class="col-sm-2"></div>

        </div>

    </div>

</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
